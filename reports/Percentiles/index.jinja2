<!DOCTYPE html>
<head>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="css/theme.css">
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
        <a class="navbar-brand" href="#">Aggregate report</a>
    </div>
</nav>
{% if env or report %}
    <div class="panel-group" id="description">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#description" href="#collapseOne">
                        Description
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body">
                    {% if env %}
                        <div class="col-md-6">
                            <table class="table table-striped table-condensed table-responsive table-bordered">
                                {% for elem in env %}
                                    {% for k in elem.keys() %}
                                        <tr>
                                            <td>{{ k }}</td>
                                            <td>{{ elem[k] }}</td>
                                        </tr>
                                    {% endfor %}
                                {% endfor %}
                            </table>
                        </div>
                    {% endif %}
                    {% if report %}
                        <div class="col-md-6">
                            {{ report }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <br>
{% endif %}
<div class="panel-group" id="params">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#params" href="#collapseParams">
                    Parameters
                </a>
            </h4>
        </div>
        <div id="collapseParams" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon">Show columns</span>

                            <div class="input-group-btn btn-group-custom" data-toggle="buttons">
                                <label class="btn btn-primary active">
                                    <input id="btn_show_50line" type="checkbox" onchange="showColumn('btn_show_50line', ['50line']);"> 50% Line
                                </label>
                                <label class="btn btn-primary active">
                                    <input id="btn_show_60line" type="checkbox" onchange="showColumn('btn_show_60line', ['60line']);"> 60% Line
                                </label>
                                <label class="btn btn-primary active">
                                    <input id="btn_show_70line" type="checkbox" onchange="showColumn('btn_show_70line', ['70line']);"> 70% Line
                                </label>
                                <label class="btn btn-primary active">
                                    <input id="btn_show_80line" type="checkbox" onchange="showColumn('btn_show_80line', ['80line']);"> 80% Line
                                </label>
                                <label class="btn btn-primary active">
                                    <input id="btn_show_90line" type="checkbox" onchange="showColumn('btn_show_90line', ['90line']);"> 90% Line
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>

{{ data_table }}

<script type="text/javascript" src="js/jquery.js"></script>
<script type="text/javascript" src="js/bootstrap.js"></script>
<script type="text/javascript">
    $('table tbody tr').each(function (i, n) {
        if ((parseFloat($(n).children('.80line').text())/parseFloat($(n).children('.90line').text())) > 0.90)
	        $(n).children().css('background-color', '#C5E8D3');

        if ((parseFloat($(n).children('.70line').text())/parseFloat($(n).children('.90line').text())) > 0.90)
	        $(n).children().css('background-color', '#8EE8B0');

        if ((parseFloat($(n).children('.50line').text())/parseFloat($(n).children('.90line').text())) > 0.90)
	        $(n).children().css('background-color', '#26BD60');

        if ((parseFloat($(n).children('.70line').text())/parseFloat($(n).children('.90line').text())) < 0.70 &&
            $(n).children('.70line').text() > 1000)
	        $(n).children().css('background-color', '#EB7F7F');

        if ((parseFloat($(n).children('.80line').text())/parseFloat($(n).children('.90line').text())) < 0.70 &&
            $(n).children('.80line').text() > 1000)
	        $(n).children().css('background-color', '#E84646');
    });

    function showColumn(btn_name, columns) {
        var btn = document.getElementById(btn_name);

        for (var i = 0; i < columns.length; i++) {
            if (btn.checked) {
                $('.' + columns[i]).show();
            } else {
                $('.' + columns[i]).hide();
            }
        }

    }
</script>
</body>
